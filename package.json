{
  "name": "legends-ascend-mvp",
  "version": "1.0.0",
  "description": "Legends Ascend Football Management Game MVP",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:frontend -- --coverage && npm run test:backend -- --coverage",
    "test:all": "npm run test && npm run test:e2e",
    "validate:dod": "ts-node scripts/dod-validation/validate-dod.ts",
    "validate:coverage": "npm run test:coverage",
    "validate:security": "npm audit --audit-level=high",
    "validate:a11y": "npm run test:frontend -- --grep accessibility",
    "report:dod": "npm run validate:dod",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "echo 'Backend linting not configured'",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "playwright:install": "playwright install"
  },
  "keywords": ["football", "management", "game", "legends-ascend"],
  "author": "Legends Ascend Team",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "playwright": "^1.56.1"
  }
}
