# Frontend Environment Variables
# Copy this file to .env.local for local development
# For Vercel deployment, set these in Project Settings > Environment Variables

# API Configuration - REQUIRED for all environments
# This tells the frontend where to find the backend API
# Local development: http://localhost:3000/api (Vite proxy forward)
# Vercel deployment: /api (relative URL, routed to /api in Vercel)
VITE_API_URL=/api

# Backend Environment Variables
# Set these in Vercel project environment variables

# Database Configuration - NeonDB (PostgreSQL)
# These are typically set automatically by Neon integration
LA_DATABASE_URL=postgresql://user:password@host/database
LA_POSTGRES_URL=postgresql://user:password@host/database
LA_POSTGRES_PRISMA_URL=postgresql://user:password@host/database?schema=public
LA_POSTGRES_URL_NO_SSL=postgresql://user:password@host/database

# Node Environment
NODE_ENV=production

# Development only
# These should NOT be set in production Vercel deployment
# PORT=3000
# LOG_LEVEL=debug
