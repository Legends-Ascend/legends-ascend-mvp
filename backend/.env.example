PORT=3000
# Use LA_POSTGRES_URL for Vercel/Neon deployments (automatically injected)
# For local development, you can use DATABASE_URL as fallback
LA_POSTGRES_URL=postgresql://user:password@localhost:5432/legends_ascend
DATABASE_URL=postgresql://user:password@localhost:5432/legends_ascend
NODE_ENV=development

# CORS Configuration (optional for production)
# Comma-separated list of allowed origins for CORS
# Example: ALLOWED_ORIGINS=https://legendsascend.com,https://www.legendsascend.com
# ALLOWED_ORIGINS=

# EmailOctopus Configuration (required for US-001 landing page)
EMAILOCTOPUS_API_KEY=your_api_key_here
EMAILOCTOPUS_LIST_ID=your_list_id_here
# Optional: Tag to apply to new subscribers (e.g., 'beta-access')
EMAILOCTOPUS_BETA_ACCESS_TAG=beta-access
# Optional: Set to false to disable returning debug payloads from EmailOctopus responses
EMAILOCTOPUS_DEBUG=false
